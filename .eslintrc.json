{
  "extends": [
    "next",
    "next/core-web-vitals",
    "@stockvio"
  ],
  "env": {
    "browser": true
  },
  "plugins": [
    "react",
    "@next/eslint-plugin-next"
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/strict-boolean-expressions": "off",
    "max-lines": [
      "warn",
      500
    ]
  },
  "ignorePatterns": [
    "next-env.d.ts",
    "next.config.js"
  ]
}
