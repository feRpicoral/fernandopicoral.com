        <!-- META -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="utf-8">
        <title>Picoral</title>

    </head>

    <body>

        <header class="navbar align-items-center pt-4 fixed-top" id="nav">
            <div class="container">
                <a class="header-logo no-outline" href="#"><span class="header-code-icon">&lt</span> Picoral <span class="header-code-icon"><span>/</span>&gt</span></a>
                <a class="a-btn-menu no-outline" id="menu-toggle-a">
                    <i class="icon icon-md icon-menu"></i>
                    <span class="icon-text">menu</span>
                </a>
            </div>
        </header>

        <nav class="menu" id="menu-screen">
            <div class="container d-flex menu-container align-items-center justify-content-center">
                <ul id="menu-list">
                    <li class="menu-item">
                        <a href="#" class="menu-link">home</a>
                    </li>
                    <li class="menu-item">
                        <a href="#projects" class="menu-link">projects</a>
                    </li>
                    <li class="menu-item">
                        <a href="#" class="menu-link">skills</a>
                    </li>
                    <li class="menu-item">
                        <a href="#" class="menu-link">contact</a>
                    </li>
                    <li class="menu-item">
                        <a href="#" class="menu-link">other</a>
                    </li>
                </ul>
            </div>
        </nav>


        <div class="logo-wrap" id="home-wrap">
            <div class="logo text-center d-flex align-items-center justify-content-center ">

                <h1 class="rainbow-text text-capitalize">picoral</h1>
                <hr>
                <h2>i enjoy building things</h2>
                <div class="d-none justify-content-center mt-5">
                    <p class="scroll-anim">
                        <span>scroll down</span>
                        <i class="fal fa-chevron-down d-block pt-2"></i>
                    </p>
                </div>
            </div>
        </div>

        <div class="container main-wrap">

            <section class="main-card-wrap order-1" id="projects-wrap">
                <div class="projects br-16" id="projects">

                    <div class="projects-header br-top-16 m-auto mb-5">
                        <h1>//projects</h1>
                    </div>

                    <div class="h-100 project mt-4 pb-4 px-4">
                        <div class="h-100 row align-items-stretch m-auto">

                            <div class="col-1 a-btn-col">
                                <a href="javascript:void(0)" class="a-btn-control a-btn-bfr pl-3 pr-0 invisible">
                                    <i class="fal fa-chevron-left"></i>
                                </a>
                            </div>

                            <div class="h-100 col p-0 project-content-row text-center d-flex align-items-stretch">
                                <div class="h-100 container py-3 project-content-wrap">
                                </div>
                            </div>

                            <div class="col-1 a-btn-col">
                                <a href="javascript:void(0)" class="a-btn-control a-btn-nxt pr-3 pl-0">
                                    <i class="fal fa-chevron-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="row m-auto text-center page-dot-row">
                        <div class="col mb-4 page-dot-col">
                        </div>
                    </div>

                </div>
            </section>

            <section class="main-card-wrap order-2 skills-wrap" id="skills-wrap">
                <div class="skills br-16" id="skills">
                    <div class="row skills-row m-auto justify-content-around">
                        <div class="h-100 mr-lg-5 mb-lg-0 mb-5 col-12 col-lg p-0 br-16 skills-col">
                            <div class="front-end-img br-top-16 skills-header d-flex justify-content-center align-items-center">
                                <h1>&ltfrontEnd/&gt</h1>
                            </div>
                            <div class="skills-body h-100">
                                <p class="text-center">Developing beautiful and responsive websites, mobile apps and web applications is my passion.<br>Here's what I'm comfortable with:</p>
                                <ul>
                                    <li><img src="/img/icons/html5-icon.svg"></li>
                                    <li>HTML5</li>
                                    <br>
                                    <li><i class="fab fa-css3" style="color: deepskyblue;"></i></li>
                                    <li>CSS</li>
                                    <br>
                                    <li><img src="/img/icons/js-logo.svg"></li>
                                    <li>Javascript</li>
                                    <br>
                                    <li><img src="/img/icons/reactjs-icon.svg"></li>
                                    <li>ReactJs</li>
                                    <br>
                                    <li><img src="/img/icons/bootstrap-icon.svg"></li>
                                    <li>Bootstrap 4</li>
                                    <br>
                                    <li><img src="/img/icons/jquery-icon.svg"></li>
                                    <li>jQuery</li>

                                </ul>
                            </div>
                        </div>
                        <div class="center-col d-none col-12 col-lg p-0 skills-col mb-lg-0 mb-5">
                            <div class="skills-header br-top-16 d-flex justify-content-center align-items-center">
                                <h1></h1>
                            </div>
                        </div>
                        <div class="h-100 br-16 ml-lg-5 col-12 col-lg p-0 skills-col">
                            <div class="back-end-img skills-header br-top-16 d-flex justify-content-center align-items-center">
                                <h1>backEnd(&nbsp;);</h1>
                            </div>
                            <div class="skills-body h-100">
                                <p class="text-center">What's the point of having something that looks nice but that doesn't do anything?
                                    <br>These are the back-end tools I know.</p>
                                <ul>
                                    <li><img src="/img/icons/nodejs-icon.svg"></li>
                                    <li>NodeJS</li>
                                    <br>
                                    <li><img src="/img/icons/mongodb-icon.svg"></li>
                                    <li>MongoDB</li>
                                    <br>
                                    <li><i class="fab fa-php"></i></li>
                                    <li>PHP</li>
                                    <br>
                                    <li><img src="/img/icons/java-icon.svg"></li>
                                    <li>Java</li>
                                    <br>
                                    <li><img src="/img/icons/python-icon.svg"></li>
                                    <li>Python</li>
                                    <br>
                                    <li><img src="/img/icons/csharp-icon.svg"></li>
                                    <li>C#</li>
                                </ul>
                                <a name="contact"></a> <!--Placed here for better positioning-->
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="main-card-wrap order-3" id="contact-wrap">

                <div class="contact br-16">

                    <div class="contact-header br-top-16 m-auto mb-5">
                        <h1>//contact</h1>
                    </div>

                    <div class="container mt-4">
                        <form action="/contact" method="POST" role="form" class="needs-validation contact-form px-3 py-5" id="contact-form" novalidate>
                            <div class="form-group">
                                <label for="contact-name">#name</label>
                                <input id="contact-name" placeholder="Name" type="text" class="form-control" name="name" required>
                                <div class="invalid-feedback">You have a name, don't you?</div>

                                <label for="contact-email">#email</label>
                                <input id="contact-email" type="email" class="form-control" name="email" placeholder="name@example.com" required>
                                <div class="invalid-feedback">Did you enter your email correctly?</div>


                                <label for="contact-message">#message</label>
                                <textarea name="message" id="contact-message" placeholder="Write your message here" class="form-control" rows="5" required></textarea>
                                <div class="invalid-feedback">It looks like you forgot your message</div>

                            </div>

                            <%if(typeof contact != "undefined") {%>
                                <p class="contact-status <%=contact.class%>"><%=contact.message%></p>
                            <%} else {%>
                            <p class="contact-status"></p>
                            <%}%>

                            <button id="submit-btn" type="submit" class="btn btn-lg btn-outline-success mt-3 text-capitalize">submit</button>
                        </form>
                    </div>
                </div>
            </section>

            <section class="other-wrap container main-card-wrap order-4" id="other-wrap">
                <div class="other text-center">
                    <h1>let's <span>build</span> something <span>together.</span></h1>
                    <br>
                    <p>Do you have an amazing idea and need some help?<br>Reach me out, let's turn this idea into reality.</p>
                    <a href="#contact" role="button" id="lets-go">let's do it</a>
                </div>
            </section>

        </div>

        <%- include('templates/footer')%>

    </body>
</html>